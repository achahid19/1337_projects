# Variables

CC = cc

CFLAGS = -Wall -Wextra -Werror

SRCS = $(addprefix sources/, push_swap.c actions.c actions2.c \
		args_checker.c input_erros.c move_utils.c utils.c \
		push_swap_utils.c push_swap_utils2.c stack_shifting.c)

OBJECTS = $(SRCS:.c=.o)

LIBFT = ./libft/libft.a

HEADER = $(addprefix includes/, push_swap.h)

NAME = push_swap

# Targets

all: $(NAME)

$(NAME): $(SRCS) $(OBJECTS) $(HEADER) $(LIBFT)
		@$(CC) $(CFLAFS) $(OBJECTS) $(LIBFT) -o $(NAME)
		@echo "ðŸš€ Push_swap Program Compiled ðŸš€"

$(LIBFT):
		@$(MAKE) -C ./libft
		@echo "Libft archive created successfully âœ…"

clean:
		@rm -f $(OBJECTS)
		@echo "Push_swap Repo Cleaned âœ…"
		@$(MAKE) clean -C ./libft
		@echo "Libft repo cleaned âœ…"

fclean: clean
		@rm -f $(NAME)
		@echo "Push_swap Program Deleted ðŸš®"
		@$(MAKE) fclean -C ./libft
		@echo "Libft Archive Deleted ðŸš®"

re: fclean all

.PHONY: clean fclean all re
